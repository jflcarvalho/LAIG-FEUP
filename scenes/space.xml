<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>
    <translation x="-1" y="1" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="0.25" sy="0.25" sz="0.25" />
    <reference length="0" />
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="1" g="1" b="1" a="1" />
    <background r="0" g="0" b="0" a="1" />
</ILLUMINATION>


<LIGHTS>
	<LIGHT id="l_sun">
        <enable value ="1" />
        <position  x="0" y="0" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>
</LIGHTS>


<TEXTURES>
    <TEXTURE id="t_sun">
        <file path="images/sun.jpg" />
        <amplif_factor s="2" t="2" />
    </TEXTURE>
</TEXTURES>


<MATERIALS>
    <MATERIAL id="m_default">
        <shininess value="10" />
        <specular r="0.5" g="0.5" b="0.5" a="1" />
        <diffuse r="0.5" g="0.5" b="0.5" a="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <MATERIAL id="m_sun">
        <shininess value="0" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="0.0" g="0.0" b="0.0" a="1" />
        <ambient r="0.0" g="0.0" b="0.0" a="1" />
        <emission r="1.0" g="0.5" b="0.0" a="1" />
    </MATERIAL>
</MATERIALS>


<!-- The leaves -->
<LEAVES>
</LEAVES>


<!-- The nodes -->
<NODES>
    <ROOT id="root" />

    <!-- The root node -->
    <NODE id="root">
        <MATERIAL id="m_default" />
        <TEXTURE id="null" />
        <DESCENDANTS>
            <NODEREF id="solar_system" />
        </DESCENDANTS>
    </NODE>

    <!-- Solar System -->
    <NODE id="solar_system">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        <DESCENDANTS>
            <NODEREF id="sun" />
            <NODEREF id="planets" />
		</DESCENDANTS>
    </NODE>

    <!-- Sun -->
     <NODE id="sun">
        <MATERIAL id="m_sun" />
        <TEXTURE id="t_sun" />
        <DESCENDANTS>
                <LEAF id="p_sun" type="sphere" args="10 20 20" />
        </DESCENDANTS>
    </NODE>

    <!-- Planets -->
     <NODE id="planets">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        <DESCENDANTS>
            <NODEREF id="mercury" />
            <NODEREF id="venus" />
            <NODEREF id="earth" />
            <NODEREF id="mars" />
        </DESCENDANTS>
    </NODE>

    <NODE id="mercury">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        <TRANSLATION x="-25" y="0" z="0" />
        <DESCENDANTS>
                <LEAF id="p_mercury" type="sphere" args="2 20 20" />
        </DESCENDANTS>
    </NODE>

    <NODE id="venus">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        <TRANSLATION x="-40" y="0" z="0" />
        <DESCENDANTS>
                <LEAF id="p_venus" type="sphere" args="2 20 20" />
        </DESCENDANTS>
    </NODE>

    <NODE id="earth">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        <TRANSLATION x="-65" y="0" z="0" />
        <DESCENDANTS>
                <LEAF id="p_earth" type="sphere" args="3 20 20" />
        </DESCENDANTS>
    </NODE>

    <NODE id="mars">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        <TRANSLATION x="-90" y="0" z="0" />
        <DESCENDANTS>
            <NODEREF id="robot" />
            <LEAF id="p_mars" type="sphere" args="2 20 20" />
        </DESCENDANTS>
    </NODE>

    <!-- ROBOT -->
    <NODE id="robot">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        <DESCENDANTS>
            <NODEREF id="body" />
		</DESCENDANTS>
    </NODE>


    <NODE id="body">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        <SCALE sx="1" sy="1.25" sz="1" />
        <TRANSLATION x="0" y="2" z="0" />
        <DESCENDANTS>
            <NODEREF id="box" />
            <NODEREF id="wheels" />
		</DESCENDANTS>
    </NODE>

    <!-- WHEELS -->
    <NODE id="wheels">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        <DESCENDANTS>
            <NODEREF id="wheel1" />
            <NODEREF id="wheel2" />
            <NODEREF id="wheel3" />
            <NODEREF id="wheel4" />
            <NODEREF id="wheel5" />
            <NODEREF id="wheel6" />
		</DESCENDANTS>
    </NODE>

    <NODE id="wheel1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        <TRANSLATION x="-0.5" y="0" z="0.5" />
        <DESCENDANTS>
            <LEAF id="p_wheel1" type="cylinder" args="0.2 0.2 0.2 20 20" />
		</DESCENDANTS>
    </NODE>

    <NODE id="wheel2">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        <TRANSLATION x="0" y="0" z="0.5" />
        <DESCENDANTS>
            <LEAF id="p_wheel2" type="cylinder" args="0.2 0.2 0.2 20 20" />
		</DESCENDANTS>
    </NODE>

    <NODE id="wheel3">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        <TRANSLATION x="0.5" y="0" z="0.5" />
        <DESCENDANTS>
            <LEAF id="p_wheel3" type="cylinder" args="0.2 0.2 0.2 20 20" />
		</DESCENDANTS>
    </NODE>

    <NODE id="wheel4">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        <TRANSLATION x="0.5" y="0" z="-0.7" />
        <DESCENDANTS>
            <LEAF id="p_wheel4" type="cylinder" args="0.2 0.2 0.2 20 20" />
		</DESCENDANTS>
    </NODE>

    <NODE id="wheel5">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        <TRANSLATION x="0" y="0" z="-0.7" />
        <DESCENDANTS>
            <LEAF id="p_wheel5" type="cylinder" args="0.2 0.2 0.2 20 20" />
		</DESCENDANTS>
    </NODE>

    <NODE id="wheel6">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        <TRANSLATION x="-0.5" y="0" z="-0.7" />
        <DESCENDANTS>
            <LEAF id="p_wheel6" type="cylinder" args="0.2 0.2 0.2 20 20" />
		</DESCENDANTS>
    </NODE>

    <!-- UTILS -->
    <NODE id="box">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        <DESCENDANTS>
            <NODEREF id="face1" />
            <NODEREF id="face2" />
            <NODEREF id="face3" />
            <NODEREF id="face4" />
            <NODEREF id="face5" />
            <NODEREF id="face6" />
        </DESCENDANTS>
    </NODE>

    <!-- A cube face -->
    <NODE id="face1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        <TRANSLATION x="0" y="0" z="0.5" />
        <DESCENDANTS>
					<LEAF  type="rectangle" args="-0.5 0.5 0.5 -0.5" />
        </DESCENDANTS>
    </NODE>

    <NODE id="face2">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
		    <ROTATION axis="y" angle="-90" />
        <TRANSLATION x="0" y="0" z="0.5" />
        <DESCENDANTS>
					<LEAF  type="rectangle" args="-0.5 0.5 0.5 -0.5" />
        </DESCENDANTS>
    </NODE>

    <NODE id="face3">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
		    <ROTATION axis="y" angle="-180" />
        <TRANSLATION x="0" y="0" z="0.5" />
        <DESCENDANTS>
					<LEAF  type="rectangle" args="-0.5 0.5 0.5 -0.5" />
        </DESCENDANTS>
    </NODE>

    <NODE id="face4">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
		    <ROTATION axis="y" angle="90" />
        <TRANSLATION x="0" y="0" z="0.5" />
        <DESCENDANTS>
					<LEAF  type="rectangle" args="-0.5 0.5 0.5 -0.5" />
        </DESCENDANTS>
    </NODE>

    <NODE id="face5">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
		    <ROTATION axis="x" angle="-90" />
        <TRANSLATION x="0" y="0" z="0.5" />
        <DESCENDANTS>
					<LEAF  type="rectangle" args="-0.5 0.5 0.5 -0.5" />
        </DESCENDANTS>
    </NODE>

    <NODE id="face6">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
		    <ROTATION axis="x" angle="90" />
        <TRANSLATION x="0" y="0" z="0.5" />
        <DESCENDANTS>
					<LEAF  type="rectangle" args="-0.5 0.5 0.5 -0.5" />
        </DESCENDANTS>
    </NODE>
</NODES>

</SCENE>
