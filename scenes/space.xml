<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>
    <translation x="-1" y="1" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="0.25" sy="0.25" sz="0.25" />
    <reference length="0" />
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.25" g="0.25" b="0.25" a="1" />
    <background r="0" g="0" b="0" a="1" />
</ILLUMINATION>


<LIGHTS>
	<LIGHT id="l_sun">
        <enable value ="1" />
        <position  x="0" y="0" z="0" w="1" />
        <ambient r="0.1" g="0.1" b="0.1" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>
</LIGHTS>


<TEXTURES>
    <TEXTURE id="t_sun">
        <file path="images/solar_system/sun.jpg" />
        <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="t_mercury">
        <file path="images/solar_system/mercury.jpg" />
        <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="t_venus">
        <file path="images/solar_system/venus.jpg" />
        <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="t_earth">
        <file path="images/solar_system/earth.jpg" />
        <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="t_mars">
        <file path="images/solar_system/mars.jpg" />
        <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="t_jupiter">
        <file path="images/solar_system/jupiter.jpg" />
        <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="t_saturn">
        <file path="images/solar_system/saturn.jpg" />
        <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="t_uranus">
        <file path="images/solar_system/uranus.jpg" />
        <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="t_neptune">
        <file path="images/solar_system/neptune.jpg" />
        <amplif_factor s="1" t="1" />
    </TEXTURE>
</TEXTURES>


<MATERIALS>
    <MATERIAL id="m_default">
        <shininess value="10" />
        <specular r="0.5" g="0.5" b="0.5" a="1" />
        <diffuse r="0.5" g="0.5" b="0.5" a="1" />
        <ambient r="0.1" g="0.1" b="0.1" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <MATERIAL id="m_sun">
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="0.0" g="0.0" b="0.0" a="1" />
        <ambient r="0.0" g="0.0" b="0.0" a="1" />
        <emission r="1.0" g="0.5" b="0.0" a="1" />
    </MATERIAL>
</MATERIALS>


<!-- The leaves -->
<LEAVES>
</LEAVES>


<!-- The nodes -->
<NODES>
    <ROOT id="root" />

    <!-- The root node -->
    <NODE id="root">
        <MATERIAL id="m_default" />
        <TEXTURE id="null" />
        <DESCENDANTS>
            <NODEREF id="solar_system" />
        </DESCENDANTS>
    </NODE>

    <!-- Solar System -->
    <NODE id="solar_system">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        <DESCENDANTS>
            <NODEREF id="sun" />
            <NODEREF id="planets" />
		</DESCENDANTS>
    </NODE>

    <!-- Sun -->
     <NODE id="sun">
        <MATERIAL id="m_sun" />
        <TEXTURE id="t_sun" />
        <DESCENDANTS>
                <LEAF id="p_sun" type="sphere" args="10 20 20" />
        </DESCENDANTS>
    </NODE>

    <!-- Planets -->
     <NODE id="planets">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        <DESCENDANTS>
            <NODEREF id="mercury" />
            <NODEREF id="venus" />
            <NODEREF id="earth" />
            <NODEREF id="mars" />
        </DESCENDANTS>
    </NODE>

    <NODE id="mercury">
        <MATERIAL id="null" />
        <TEXTURE id="t_mercury" />
        <TRANSLATION x="-25" y="0" z="0" />
        <DESCENDANTS>
                <LEAF id="p_mercury" type="sphere" args="2 20 20" />
        </DESCENDANTS>
    </NODE>

    <NODE id="venus">
        <MATERIAL id="null" />
        <TEXTURE id="t_venus" />
        <TRANSLATION x="-40" y="0" z="0" />
        <DESCENDANTS>
                <LEAF id="p_venus" type="sphere" args="2 20 20" />
        </DESCENDANTS>
    </NODE>

    <NODE id="earth">
        <MATERIAL id="null" />
        <TEXTURE id="t_earth" />
        <TRANSLATION x="-65" y="0" z="0" />
        <ROTATION axis="x" angle="90" />
        <DESCENDANTS>
                <LEAF id="p_earth" type="sphere" args="3 20 20" />
        </DESCENDANTS>
    </NODE>

    <NODE id="mars">
        <MATERIAL id="null" />
        <TEXTURE id="t_mars" />
        <TRANSLATION x="-90" y="0" z="0" />
        <DESCENDANTS>
            <!-- <NODEREF id="robot" /> -->
            <LEAF id="p_mars" type="sphere" args="2 20 20" />
        </DESCENDANTS>
    </NODE>
</NODES>

</SCENE>
