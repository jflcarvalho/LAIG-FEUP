<SCENE>

  <!-- Initial values -->
  <INITIALS>
    <frustum near="0.1" far="100"/>
    <translation x="0" y="0" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="1" sy="1" sz="1" />
    <reference length="5" />
  </INITIALS>


  <!-- Illumination and clear colour -->
  <ILLUMINATION>
    <ambient r="1" g="1" b="1" a="1" />
    <background r="0" g="0" b="0" a="1" />
  </ILLUMINATION>

  <LIGHTS>
    <!-- DEBUG LIGHTS -->
    <LIGHT id="light1">
      <enable value ="1" />
      <position  x="100" y="100" z="100" w="1" />
      <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
      <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
      <specular r="0.2" g="0.2" b="0.2" a="1.0" />
    </LIGHT>
    <LIGHT id="light2">
      <enable value ="1" />
      <position  x="-100" y="100" z="100" w="1" />
      <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
      <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
      <specular r="0.2" g="0.2" b="0.2" a="1.0" />
    </LIGHT>
    <LIGHT id="light3">
      <enable value ="1" />
      <position  x="100" y="100" z="-100" w="1" />
      <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
      <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
      <specular r="0.2" g="0.2" b="0.2" a="1.0" />
    </LIGHT>
    <LIGHT id="light4">
      <enable value ="1" />
      <position  x="-100" y="100" z="-100" w="1" />
      <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
      <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
      <specular r="0.2" g="0.2" b="0.2" a="1.0" />
    </LIGHT>
  </LIGHTS>


  <!-- Textures -->
  <TEXTURES>
    <TEXTURE id="t_aluminium">
      <file path="images/rocket/aluminium.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>
  </TEXTURES>


  <MATERIALS>
    <MATERIAL id="m_rocket_nose">
      <shininess value="20" />
      <specular r="0.75" g="0.75" b="0.75" a="1" />
      <diffuse r="0.6" g="0.6" b="0.6" a="1" />
      <ambient r="0.1" g="0.1" b="0.1" a="1" />
      <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>
  </MATERIALS>


  <!-- The leaves -->
  <LEAVES>
  </LEAVES>


  <!-- The nodes -->
  <NODES>

    <ROOT id="nurbs" />

    <NODE id="nurbs">
      <MATERIAL id="null" />
      <TEXTURE id="clear" />
      <DESCENDANTS>
        <LEAF type="patch" args="1 1">
            <CPLINE> <!-- use as many cpline to represent the u dimension-->
                <CPOINT xx="1.0" yy="-3.0" zz="0.0" ww="1.0" /> <!-- use as many cpoint to represent the v dimension-->
                 <CPOINT xx="3.0" yy="3.0" zz="0" ww="1.0" />
            </CPLINE>
            <CPLINE> <!-- u = 1 -->
                <CPOINT xx="2.0" yy="-1.0" zz="0.0" ww="1.0" /><!-- v= 0 -->
                 <CPOINT xx="5.0" yy="1.0" zz="0.0" ww="1.0" /><!-- v= 1 -->
            </CPLINE>
        </LEAF>
      </DESCENDANTS>
    </NODE>

  </NODES>

</SCENE>
