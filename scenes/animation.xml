    </TEXTURE>

    <TEXTURE id="t_pyramid">
      <file path="images/misc/rock.jpg" />
      <amplif_factor s="0.5" t="0.5" />
    </TEXTURE>

    <TEXTURE id="t_perfurated">
      <file path="images/misc/perforated_metal.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="t_carbon">
      <file path="images/rocket/carbon.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="t_dark_grill">
      <file path="images/rocket/dark_grill.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="t_light_grill">
      <file path="images/rocket/light_grill.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>
    
    <TEXTURE id="cone_t">
      <file path="images/rocket/cone.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>
  </TEXTURES>


  <MATERIALS>
    <MATERIAL id="m_default">
      <shininess value="10" />
      <specular r="0.5" g="0.5" b="0.5" a="1" />
      <diffuse r="0.5" g="0.5" b="0.5" a="1" />
      <ambient r="0.1" g="0.1" b="0.1" a="1" />
      <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>
  </MATERIALS>

  <ANIMATIONS>
  
    <ANIMATION id="an_circular" speed="5" type="circular" 
              centerx="1" centery="2" centerz="3" 
              radius="5" startang="45" rotang="720"/>
     <ANIMATION id="an_rotate_himself" speed="1" type="circular" 
              centerx="0" centery="0" centerz="0" 
              radius="0" startang="0" rotang="720"/>
  </ANIMATIONS>

  <!-- The nodes -->
  <NODES>
    <ROOT id="mercury_system" />

    <NODE id="mercury_system">
      <MATERIAL id="null" />
      <TEXTURE id="null" />
      <ANIMATIONREFS>
        <ANIMATIONREF id="an_circular" />
      </ANIMATIONREFS>
      <DESCENDANTS>
        <NODEREF id="mercury" />
      </DESCENDANTS>
    </NODE>

    <NODE id="mercury">
      <MATERIAL id="null" />
      <TEXTURE id="t_mercury" />
      <ROTATION axis="x" angle="-90" />
      <ANIMATIONREFS>
        <ANIMATIONREF id="an_rotate_him_self" />
      </ANIMATIONREFS>
      <DESCENDANTS>
        <LEAF id="p_mercury" type="sphere" args="2 20 20" />
      </DESCENDANTS>
    </NODE>
  </NODES>

</SCENE>
