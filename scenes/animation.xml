<SCENE>

  <!-- Initial values -->
  <INITIALS>
    <frustum near="0.1" far="100"/>
    <translation x="0" y="0" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="1" sy="1" sz="1" />
    <reference length="5" />
  </INITIALS>


  <!-- Illumination and clear colour -->
  <ILLUMINATION>
    <ambient r="1" g="1" b="1" a="1" />
    <background r="0" g="0" b="0" a="1" />
  </ILLUMINATION>

  <LIGHTS>
    <!-- DEBUG LIGHTS -->
    <LIGHT id="light1">
      <enable value ="1" />
      <position  x="100" y="100" z="100" w="1" />
      <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
      <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
      <specular r="0.2" g="0.2" b="0.2" a="1.0" />
    </LIGHT>
    <LIGHT id="light2">
      <enable value ="1" />
      <position  x="-100" y="100" z="100" w="1" />
      <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
      <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
      <specular r="0.2" g="0.2" b="0.2" a="1.0" />
    </LIGHT>
    <LIGHT id="light3">
      <enable value ="1" />
      <position  x="100" y="100" z="-100" w="1" />
      <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
      <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
      <specular r="0.2" g="0.2" b="0.2" a="1.0" />
    </LIGHT>
    <LIGHT id="light4">
      <enable value ="1" />
      <position  x="1" y="2" z="3" w="1" />
      <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
      <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
      <specular r="0.2" g="0.2" b="0.2" a="1.0" />
    </LIGHT>
  </LIGHTS>


  <!-- Textures -->
  <TEXTURES>
    <TEXTURE id="t_sun">
      <file path="images/solar_system/sun.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="t_mercury">
      <file path="images/solar_system/mercury.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="t_venus">
      <file path="images/solar_system/venus.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="t_earth">
      <file path="images/solar_system/earth.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>
    
    <TEXTURE id="t_moon">
      <file path="images/solar_system/moon.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="t_mars">
      <file path="images/solar_system/mars.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="t_jupiter">
      <file path="images/solar_system/jupiter.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="t_saturn">
      <file path="images/solar_system/saturn.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="t_saturn_ring">
      <file path="images/solar_system/saturn_ring.png" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="t_uranus">
      <file path="images/solar_system/uranus.jpg" />
      <amplif_factor s="1" t="1" />
    </TEXTURE>

    <TEXTURE id="t_uranus_ring">
      <file path="images/solar_system/uranus_ring.png" />
