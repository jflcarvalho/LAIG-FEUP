<SCENE>
  <INITIALS>
    <frustum near="0.1" far="100"/>
    <translation x="0" y="0" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="1" sy="1" sz="1" />
    <reference length="5" />
  </INITIALS>


  <ILLUMINATION>
    <ambient r="1" g="1" b="1" a="1" />
    <background r="0" g="0" b="0" a="1" />
  </ILLUMINATION>


  <LIGHTS>
    <LIGHT id="light1">
      <enable value ="1" />
      <position  x="0" y="20" z="0" w="1" />
      <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
      <diffuse r="1" g="1" b="1" a="1.0" />
      <specular r="1" g="1" b="1" a="1.0" />
    </LIGHT>
  </LIGHTS>


  <TEXTURES>
     <TEXTURE id="t_board">
      <file path="images/board/board.png" />
      <amplif_factor s="8" t="8" />
    </TEXTURE>
  </TEXTURES>


  <MATERIALS>
    <MATERIAL id="m_board">
      <shininess value="1" />
      <specular r="0.5" g="0.5" b="0.5" a="1" />
      <diffuse r="0.5" g="0.5" b="0.5" a="1" />
      <ambient r="0.1" g="0.1" b="0.1" a="1" />
      <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>
    <MATERIAL id="m_white">
      <shininess value="1" />
      <specular r="0.5" g="0.5" b="0.5" a="1" />
      <diffuse r="1" g="1" b="1" a="1" />
      <ambient r="0.5" g="0.5" b="0.5" a="1" />
      <emission r="0.0" g="0.0" b="0.3" a="1" />
    </MATERIAL>
    <MATERIAL id="m_black">
      <shininess value="1" />
      <specular r="0.5" g="0.5" b="0.5" a="1" />
      <diffuse r="0.2" g="0.2" b="0.2" a="1" />
      <ambient r="0.3" g="0.3" b="0.3" a="1" />
      <emission r="0.3" g="0.0" b="0.0" a="1" />
    </MATERIAL>
  </MATERIALS>


  <ANIMATIONS>
  </ANIMATIONS>


  <NODES>
    <ROOT id="scene" />

    <NODE id="scene">
      <MATERIAL id="null" />
      <TEXTURE id="null" />
      <DESCENDANTS>
        <NODEREF id="board"/>
        <NODEREF id="quad"/>
        <NODEREF id="white_soldier"/>
        <NODEREF id="black_soldier"/>
      </DESCENDANTS>
    </NODE>

    <NODE id="board">
      <MATERIAL id="m_board" />
      <TEXTURE id="t_board" />
      <TRANSLATION x="0" y="0" z="8" />
      <ROTATION axis="x" angle="-90" />
      <DESCENDANTS>
        <LEAF type="rectangle" args="0 8 8 0" />
      </DESCENDANTS>
    </NODE>

    <NODE id="quad" class="board_position">
      <MATERIAL id="null"/>
      <TEXTURE id="clear"/>
      <DESCENDANTS>
        <LEAF type="rectangle" args="0 1 1 0"/>
      </DESCENDANTS>
    </NODE>

    <NODE id="white_soldier" class="piece">
      <MATERIAL id="m_white" />
      <TEXTURE id="clear"/>
      <DESCENDANTS>
        <LEAF type="cylinder" args="1 0.5 0.4 4 8 1 1"/>
      </DESCENDANTS>
    </NODE>

    <NODE id="black_soldier" class="piece">
      <MATERIAL id="m_black" />
      <TEXTURE id="clear"/>
      <DESCENDANTS>
        <LEAF type="cylinder" args="1 0.5 0.4 4 8 1 1"/>
      </DESCENDANTS>
    </NODE>

  </NODES>
</SCENE>
