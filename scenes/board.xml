<SCENE>

  <!-- Initial values -->
  <INITIALS>
    <frustum near="0.1" far="100"/>
    <translation x="0" y="0" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="1" sy="1" sz="1" />
    <reference length="5" />
  </INITIALS>


  <!-- Illumination and clear colour -->
  <ILLUMINATION>
    <ambient r="1" g="1" b="1" a="1" />
    <background r="0" g="0" b="0" a="1" />
  </ILLUMINATION>

  <LIGHTS>
    <!-- DEBUG LIGHTS -->
    <LIGHT id="light1">
      <enable value ="1" />
      <position  x="0" y="20" z="0" w="1" />
      <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
      <diffuse r="1" g="1" b="1" a="1.0" />
      <specular r="1" g="1" b="1" a="1.0" />
    </LIGHT>
  </LIGHTS>


  <!-- Textures -->
  <TEXTURES>
     <TEXTURE id="t_board">
      <file path="images/board/board.png" />
      <amplif_factor s="8" t="8" />
    </TEXTURE>
  </TEXTURES>


  <MATERIALS>
    <MATERIAL id="m_black">
      <shininess value="1" />
      <specular r="0.5" g="0.5" b="0.5" a="1" />
      <diffuse r="0.1" g="0.1" b="0.1" a="1" />
      <ambient r="0.1" g="0.1" b="0.1" a="1" />
      <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>
    <MATERIAL id="m_white">
      <shininess value="1" />
      <specular r="0.5" g="0.5" b="0.5" a="1" />
      <diffuse r="0.9" g="0.9" b="0.9" a="1" />
      <ambient r="0.9" g="0.9" b="0.9" a="1" />
      <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>
  </MATERIALS>


    <!-- The leaves -->
    <ANIMATIONS>
    </ANIMATIONS>


    <!-- The nodes -->
    <NODES>

      <ROOT id="board" />

      <NODE id="board">
        <MATERIAL id="m_white" />
        <TEXTURE id="t_board" />
        <TRANSLATION x="0" y="0" z="8" />
        <ROTATION axis="x" angle="-90" />
        <DESCENDANTS>
          <LEAF id="base" type="rectangle" args="0 8 8 0" />
          <NODEREF id="quad" />
        </DESCENDANTS>
      </NODE>

      <NODE id="quad" class="board">
        <MATERIAL id="m_white"/>
        <TEXTURE id="null"/>
        <DESCENDANTS>
          <LEAF id="base2" type="rectangle" args="0 1 1 0"/>
        </DESCENDANTS>
      </NODE>


    </NODES>

</SCENE>
